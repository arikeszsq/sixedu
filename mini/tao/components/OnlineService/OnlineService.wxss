
.dialogue {
 
    z-index: 222;
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    top: 0px;
    left: 0px;
    display: none;

}
.box{
    display: flex;
    justify-content: space-between;
}
/* 出现 */
.active {
    display: block;
}

.icon-call {
    width: 32rpx;
    height: 32rpx;
}

.code {
    margin-bottom: 46rpx;
    width: 380rpx;
    height: 380rpx;
    background-color: #000;
}
.dis-top{
    height: 100rpx;
    line-height: 100rpx;
    position: relative;
    text-align: center;
}
.dis-top .title{
    font-weight: bold;
    font-size: 30rpx;
    text-align: center;
}
.closed {
    transform: rotate(45deg);
    color: #7a7a7a;
    font-size: 50rpx;
    position: absolute;
    font-weight: 100;
    right: 0rpx;
    top: 0rpx;

}
.dialogue-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
}
.dialogue-item {
    width: 700rpx;
    height: 1100rpx;
    box-sizing: border-box;
    background-color: #f1f1f1;
    border-radius: 10rpx;
    padding:0rpx 30rpx;
  
}
.contain-disa {
    height: 1000rpx;
    overflow: scroll;
}
.dis-item{
    box-sizing: border-box;
    padding:30rpx;
    background-color: #fff;
    overflow: hidden;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
}
.dis-title{
    font-size: 32rpx;
    font-weight: bold;
    height: 60rpx;
    margin-bottom: 20rpx;
    border-bottom: 2rpx solid #f1f1f1;
}
.item-dis-one{
    margin-bottom: 20rpx;
}
.dis-btn{
    flex: 0 0 auto;
    width: 90rpx;
    text-align: center;
    border-radius: 40rpx;
    height: 46rpx;
    font-size: 24rpx;
    line-height: 46rpx;
    border:2rpx solid #0ed128;
    color:#0ed128;
    margin-left: 20rpx;
    align-items: center;
}
.dis-btn-addre{
    border:2rpx solid #0ebad1;
    color:#0ebad1;
}
.code-dis{
    width: 250rpx;
    height: 250rpx;
    background-color: #FF7A08;
    border-radius: 20rpx;
}
/* 客户样式结束 */